<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgangka">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView2"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka2"/>


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView3"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka3"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView4"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka4"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView5"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka5"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView6"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka6"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView7"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka7"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView8"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka8"/>


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView9"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka9"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView10"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angka10"/>


    </ViewFlipper>

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/next"
        android:text="Prev"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn2" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:text="Next"
        android:textSize="20dp"
        android:background="@drawable/btn2" />




</RelativeLayout>
