<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtuna">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tuna1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tuna2" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tuna3" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tuna4" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tuna5" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tuna6" />





    </ViewFlipper>

    <Button
        android:id="@+id/prev"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/next"
        android:text="Prev"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btnprev" />

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:text="Next"
        android:textSize="20dp"
        android:background="@drawable/btnprev" />

</RelativeLayout>

